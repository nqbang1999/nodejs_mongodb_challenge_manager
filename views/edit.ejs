<body>
<div class="button__back">
    <a href="/" class="navigation__create"><span class="material-icons" style="font-size: 300%; font-weight: bolder">arrow_back_ios</span></a>
</div>
<form action="/bangquang11/update" method="post" id="update_challenge">
    <div class="container">
        <div class="container-post">
            <div class="post">

                <div class="intro">
                    <span class="intro-title">bangquang11</span>
                </div>
                <div class="post-title">
                    <textarea name="id" style="font-size: 100%" class="post-title-text" readonly><%= challenge.id %></textarea>
                </div>
                <div class="post-title">
                    <textarea  name="title" style="font-size: 100%" class="post-title-text" placeholder="Title"><%= challenge.title %></textarea>
                </div>
                <div class="challenge__status">
                    <select class="challenge__status__list" style="font-size: 100%" name="status">
                        <option style="font-size: 30%;" value="In Progress" >In Progress</option>
                        <option style="font-size: 30%;" value="Done">Done</option>
                        <option style="font-size: 30%;" value="Overdue">Overdue</option>
                    </select>
                </div>
                <div class="post-content">
                    <textarea  name="note" style="height: 200px; font-size: 100%" class="post-content-text" placeholder="Note"><%= challenge.note %></textarea>
                </div>
                <div class="post-title">
                    <span style="font-size: 103%" class="post-title-text">Deadline</span>
                    <input style="font-size: 86%" type="date" id="finishDay" name="finishDay" value="<%= challenge.finishDay %>">
                </div>
                <div class="post-button">
                    <button class="post-button-create">Update</button>
                </div>
            </div>
        </div>
    </div>
</form>
</body>
</html>
