</head>
<body>

<div class="container_all">
    <div class="button">
        <div class="button__back">
            <a href="/" ><span  class="material-icons">west</span></a>
        </div>
    </div>
    <div class="container" style="width: 100%">
        <table class="table" id="customers">
            <tr class="table__column">
                <th>Name</th>
                <th>Start</th>
                <th>Finish</th>
                <th>Duration</th>
                <th>Left</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
            <% for (var i = 0; i < challenges.length; i++) { %>
            <tr class="detail">
                <td><%= challenges[i].title %></td>
                <td><%= challenges[i].startDay %></td>
                <td><%= challenges[i].finishDay %></td>
                <td><%= challenges[i].duration %></td>
                <td><%= challenges[i].daysLeft %> day(s)</td>
                <% if(challenges[i].status == 'In Progress'){ %>
                    <td class="detail__status"><button class="detail__status__button">In Progress</button></td>
            <% } else if (challenges[i].status == 'Overdue'){ %>
                    <td class="detail__status"><button class="detail__status__button" style="background-color: #ec3627; color: antiquewhite">Overdue</button></td>
                <% } else  { %>
                    <td class="detail__status"><button class="detail__status__button" style="background-color: mediumseagreen; color: white">Done</button></td>
                   <% }%>
<!--                <td class="detail__status"><button class="detail__status__button"><%= challenges[i].status %></button></td>-->
                <td><a href="/delete?id=<%= challenges[i].id %>">Delete</a></td>
            </tr>
            <%} %>
        </table>

    </div>
</div>


</body>
</html>